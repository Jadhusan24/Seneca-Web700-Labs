<div class="container">
	<div class="row">
		<main class="col-md-12">
      <!-- Display error message if it exists -->
      {{#if error}}
      <div class="alert alert-danger" role="alert">{{error}}</div>
      {{/if}}

			<form method="POST" action="/students/add">
				<fieldset>
					<legend>Personal Information</legend>
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label>First Name:</label>
								<input class="form-control" name="firstName" type="text" value="{{studentData.firstName}}" />
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label>Last Name:</label>
								<input class="form-control" name="lastName" type="text" value="{{studentData.lastName}}" />
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-12">
							<div class="form-group">
								<label>Email:</label>
								<input class="form-control" name="email" type="email" value="{{studentData.email}}" />
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-4">
							<div class="form-group">
								<label>Address (Street):</label>
								<input class="form-control" name="addressStreet" type="text" value="{{studentData.addressStreet}}" />
							</div>
						</div>
						<div class="col-md-4">
							<div class="form-group">
								<label>Address (City):</label>
								<input class="form-control" name="addressCity" type="text" value="{{studentData.addressCity}}" />
							</div>
						</div>
						<div class="col-md-4">
							<div class="form-group">
								<label>Address (Province):</label>
								<input class="form-control" name="addressProvince" type="text" value="{{studentData.addressProvince}}" />
							</div>
						</div>
					</div>
				</fieldset>
				<fieldset>
					<legend>Academic Information</legend>
					<div class="row">
						<div class="col-md-4">
							<label>College Employment:</label><br />
							<div class="form-check">
								<input class="form-check-input" type="checkbox" id="TA" name="TA" {{#if studentData.TA}}checked{{/if}}>
								<label class="form-check-label" for="TA">
									Teaching Assistant
								</label>
							</div>
							<br />
						</div>
						<div class="col-md-4">
							<div class="form-group">
								<label>Enrollment Status:</label><br />
								<label class="checkbox-inline">
									<input type="radio" name="status" value="Full Time" {{#if (equal studentData.status 'Full Time')}}checked{{/if}}> Full Time
								</label>
								<label class="checkbox-inline">
									<input type="radio" name="status" value="Part Time" {{#if (equal studentData.status 'Part Time')}}checked{{/if}}> Part Time
								</label>
							</div>
						</div>
						<div class="col-md-4">
							<div class="form-group">
								<label for="course">Enrolled in Course:</label>
								<select class="form-control" name="course" id="course">
									<option value="">Select Course</option>
									{{#each courses}}
									<option value="{{this.courseId}}" {{#if (equal studentData.course this.courseId)}}selected{{/if}}>{{this.courseCode}}</option>
									{{/each}}
								</select>
							</div>
						</div>
					</div>
				</fieldset>
				<hr />
				<input type="submit" class="btn btn-primary float-right" value="Add Student" /><br /><br /><br />
			</form>
		</main>
	</div>
</div>
