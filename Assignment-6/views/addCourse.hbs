<form action="/courses/add" method="POST">
  <div class="form-group">
    <label for="courseCode">Course Code:</label>
    <input type="text" class="form-control" id="courseCode" name="courseCode" placeholder="Enter course code" required>
  </div>
  <div class="form-group">
    <label for="courseDescription">Course Description:</label>
    <input type="text" class="form-control" id="courseDescription" name="courseDescription" placeholder="Enter course description" required>
  </div>
  <button type="submit" class="btn btn-primary">Add Course</button>
</form>
